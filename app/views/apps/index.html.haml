%h1 Listing apps
%table.js-applications
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @apps.each do |app|
      %tr
        %td= app.name
        %td= link_to 'Run builds', run_builds_app_path(app), data: {method: :post}
        %td= link_to 'Show', app
        %td= link_to 'Edit', edit_app_path(app)
        %td= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New App', new_app_path
