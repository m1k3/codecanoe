= form_for [@app, @build_configuration] do |f|
  - if @build_configuration.errors.any?
    #error_explanation
      %h2
        = pluralize(@build_configuration.errors.count, "error")
        prohibited this build_configuration from being saved:
      %ul
        - @build_configuration.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :commands
    %br/
    = f.text_area :commands
  .actions
    = f.submit
